---
import ContentSection from "~/components/content-section.astro";

const characters = [
  {
    name: "Laurent",
    number: "4",
    message: "J'ramene des chaises",
  },
  {
    name: "Wil",
    number: "3",
    message: "Apéro et une bonne salade....",
  },
  {
    name: "Lorraine",
    number: "3",
    message:
      "Je ferai: Un tiramisu, un framboisemisu 🤣🤣, et plus si affinités 😈😈",
  },
  {
    name: "Cricri et fredo",
    number: "2",
    message: "😊♥️🥩🍷",
  },
  {
    name: "Zineb",
    number: "4",
    message: "Garde toujours ton sourire",
  },
  {
    name: "Mireille",
    number: "2",
    message: "Punch flan coco",
  },
  {
    name: "Florentine",
    number: "2",
    message: "Je viens avec ma maman 🤗 je ramène du saucisson 😉",
  },
  {
    name: "Elise B",
    number: "1",
    message: "Le petit mot intelligent ça être dur dès le matin....",
  },
  {
    name: "Vanessa",
    number: "3",
    message: "j emmènerai une grosse salade exotique..",
  },
];
const totalNumber = characters.reduce(
  (total, character) => total + parseInt(character.number),
  0,
);
---

<ContentSection title="" id="">
  <ContentSection title="Qui sera Présent ? " id="character">
    <Fragment slot="lead">
      <h1 class="gradient-text px-2 py-4 text-center tracking-tighter text-8xl">
        Voici déjà les {totalNumber} protagonistes 🤘
      </h1>
      {
        characters.map((character, index) => (
          <div class="w-2/3">
            <p class="px-4 py-2 font-bold text-red-800 text-2xl">
              {character.name}
              <br />
              <span class="text-primary">{character.number} en plus</span>
              <br />
              <span class="text-primary">{character.message}</span>
            </p>
            <div class="m-2  rounded-xl border-4 border-red-700" />
          </div>
        ))
      }
    </Fragment>
  </ContentSection>
</ContentSection>
